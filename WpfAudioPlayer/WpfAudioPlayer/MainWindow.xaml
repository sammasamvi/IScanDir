<Window x:Class="OpenAudioPlay.OpenAudioPlayS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MediaPlayerAudioControlSample" Height="335" Width="448">
    <StackPanel Margin="10">
        <Label Name="lblStatus" Content="Not playing..." HorizontalContentAlignment="Center" Margin="5" />
        <WrapPanel HorizontalAlignment="Center">
            <Button x:Name="btnOpenAudioFile" Click="btnOpenAudioFile_Click" Content="Open Audio file"/>
            <Button x:Name="btnPlay" Click="btnPlay_Click" Content="Play"/>
            <Button x:Name="btnPause" Margin="5,0" Click="btnPause_Click" Content="Pause"/>
            <Button x:Name="btnStop" Click="btnStop_Click" Content="Stop"/>
        </WrapPanel>
        <TextBox HorizontalAlignment="Left" Height="145" Margin="101,0,0,0" TextWrapping="Wrap" Text="TextBox" Width="201"/>
    </StackPanel>
</Window>